@using Shared.Templates
@using Shared.Documents

@inject DocumentsRepository DocumentsRepository

<div>
    @if (onloading)
    {
        <Loading />
    }
    else
    {
        <div class="card shadow mb-3 divCard">
            <div class="vstack">
                <RadzenText><strong>@Document.Title</strong> </RadzenText>
                <RadzenText><strong>Descrizione: </strong> @Document.Description</RadzenText>
                <RadzenText><strong>CSE: </strong> @Document.CSE</RadzenText>
                <RadzenText>Aziende prenseti:</RadzenText>
                @foreach (var company in Document.Companies)
                {
                    <RadzenText>@company.CompanyName</RadzenText>
                }

                <RecapTemplateQuestions SelectedTemplate="@SelectedTemplate" />

            </div>
        </div>

        <div class="row">
            <div class="col">
                <RadzenButton Icon="arrow_back" Text="Indietro" Click="@Back" />
            </div>
            <div class="col divForward">
                <RadzenButton Click="@SaveDocument" Icon="arrow_forward" Text="Avanti" class="buttonForward" />
            </div>
        </div>
    }
</div>



@code {

    [Parameter]
    public DocumentModel? Document { get; set; }

    [Parameter]
    public TemplateModel SelectedTemplate { get; set; } = new();

    [Parameter]
    public EventCallback OnBack { get; set; }

    private bool onloading = false;

    private bool onSaving = false;

    public async Task SaveDocument()
    {
        onSaving = true;

        await DocumentsRepository.SaveDocument(Document);

        onSaving = false;
    }

    public void Back()
    {
        OnBack.InvokeAsync();
    }

}