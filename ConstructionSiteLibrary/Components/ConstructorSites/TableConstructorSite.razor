@using ConstructionSiteLibrary.Model;
@using ConstructionSiteLibrary.Utility;

@inject ConstructorSitesRepository SiteRepository
@inject DialogService DialogService


<ScreenComponent @ref="screenComponent" />

@if (onLoading)
{
    <Loading />
}
else
{
    <div class="mx-2 my-5">
        <div class="my-5">
            <div class="row">
                <div class="col-xl-4 EmptyColumn"></div>
                <div class="divSearchBar">
                    <RadzenFormField Text="Ricerca cantiere" Variant="@GlobalVariables.ComponentVariant" class="searchBar">
                        <Start>
                            <RadzenIcon Icon="search" />
                        </Start>
                        <ChildContent>
                            <RadzenTextBox ValueChanged="@(args => SearchChanged(args))" />
                        </ChildContent>
                    </RadzenFormField>
                </div>
                <div class="col-4 buttonContainer">
                    <RadzenButton class="buttonNewSite" Icon="add" Text="Crea nuovo" Click="@OpenForm" />
                </div>
            </div>
        </div>
        <div>
            @for (int i = 0; i < displayedSites.Count; i+=2)
            {
                <div class="row mt-4">
                    <div class="col">
                        <CardConstructorSite Site="@displayedSites[i]" />
                    </div>
                    <div class="col">
                        @if((i+1) < displayedSites.Count)
                        {
                            <CardConstructorSite Site="@displayedSites[i+1]" />
                        }
                    </div>
                </div> 
            }
        </div>
        <div class="mt-5">
            <RadzenPager ShowPagingSummary="true" PagingSummaryFormat="@pagingSummaryFormat" HorizontalAlign="HorizontalAlign.Left" Count="count" PageSize="@pageSize" PageChanged="@PageChanged" />
        </div>
    </div>
}
