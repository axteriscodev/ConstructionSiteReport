@using ConstructionSiteLibrary.Model;
@using ConstructionSiteLibrary.Utility;

@inject ConstructorSitesRepository SiteRepository
@inject DialogService DialogService


<ScreenComponent @ref="screenComponent" />

@if (onLoading)
{
    <Loading />
}
else
{
    <div class="mx-2 my-5">
    <div class="my-5">
        <div class="row">
            <div class="col">
                <RadzenText TextStyle="TextStyle.H4" class="text-color">
                    <strong>I miei cantieri</strong>
                </RadzenText>
            </div>
            <div class="col-xl-4 EmptyColumn"></div>
            <div class="divSearchBar">
                <RadzenFormField AllowFloatingLabel="false" Variant="@GlobalVariables.ComponentVariant" class="searchBar">
                    <Start>
                        <RadzenIcon Icon="search" />
                    </Start>
                    <ChildContent>
                        <RadzenTextBox Placeholder="Ricerca cantieri" ValueChanged="@(args => SearchChanged(args))" />
                    </ChildContent>
                </RadzenFormField>
            </div>
            <div class="col-4 buttonContainer">
                <RadzenButton class="buttonNewSite" ButtonStyle="ButtonStyle.Success" Icon="add" Text="Nuovo"
                    Click="@OpenForm" />
            </div>
        </div>
    </div>
    <div>
        @for (int i = 0; i < displayedSites.Count; i += 1)
            {
                <div class="row mt-4">
                    <div class="col">
                        <CardConstructorSite Site="@displayedSites[i]" />
                    </div>
                </div>
            }
        </div>
        <div class="mt-5">
            <RadzenPager ShowPagingSummary="true" PagingSummaryFormat="@pagingSummaryFormat"
                HorizontalAlign="HorizontalAlign.Left" Count="count" PageSize="@pageSize" PageChanged="@PageChanged" />
        </div>
    </div>
}
