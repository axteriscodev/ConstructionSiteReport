@inject NavigationService Navigation


<div class="card shadow round-border cardClass cardColor1" onclick="@(()=>OnClick())">
    <div class="card-body round-border">
        <h5 class="card-title text-center">@Site.Name</h5>
        <hr style="border: none; background-color: rgba(0,0,0,.6); height: 1px; margin: 1rem 0;" />
        <div class="row mb-5">
            <div class="col-12">
                <p class="card-text text-size"><strong>Descrizione:</strong> @Site.JobDescription</p>
            </div>
        </div>
        <hr style="border: none; background-color: rgba(0,0,0,.6); height: 1px; margin: 1rem 0;" />
        <div class="row">
            <div class="col-12">
                <p class="card-text text-size text-bborder"><strong>Indirizzo:</strong> @Site.Address</p>
                <p class="card-text text-size"><strong>Data inizio:</strong> @PrintDate(Site.StartDate)</p>
@*                 <p class="card-text"><strong>Data fine:</strong> @PrintDate(Site.EndDate)</p> *@
            </div>
        </div>
    </div>
</div>