@inject NavigationService Navigation


<div class="card round-border cardClass" onclick="@(()=>OnClick())">
    <div class="round-border">
        <div class="row my-3">
            <div class="col-12 col-lg-6">
                <h4 class="card-title title-weight text-color"><strong>@Site.Name</strong></h4>
                <p>@Site.JobDescription</p>
            </div>

            <div class="col-12 col-md-6 col-lg-3 d-flex align-items-center mt-3 mt-lg-0">
                <p>@PrintDate(Site.StartDate)</p>
                
            </div>
            <div class="col-12 col-md-6 col-lg-3 d-flex align-items-center mt-3 mt-lg-0">
                <p>@Site.Address</p>
                @* <p class="card-text"><strong>Data fine:</strong> @PrintDate(Site.EndDate)</p> *@
            </div>
        </div>
    </div>
</div>
