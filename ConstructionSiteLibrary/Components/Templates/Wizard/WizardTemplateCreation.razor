@using ConstructionSiteLibrary.Repositories


@inject TemplatesRepository TemplatesRepository

<ScreenComponent @ref="screenComponent" />
@if (initialLoading)
{
    <Loading />
}
else
{
    <RadzenSteps @ref="_stepsComponent" ShowStepsButtons="false">
        <Steps>
            <RadzenStepsItem>
                <TemplateSelectionStep />
            </RadzenStepsItem>
            <RadzenStepsItem>
                <TemplateDescriptionSelectionStep OnBack="@Back" />
            </RadzenStepsItem>
            <RadzenStepsItem>
                <TemplateQuestionsSelectionStep OnBack="@Back"/>
            </RadzenStepsItem>
            <RadzenStepsItem>
                <TemplateNameStep OnBack="@Back" />
            </RadzenStepsItem>
        </Steps>
    </RadzenSteps>
}

