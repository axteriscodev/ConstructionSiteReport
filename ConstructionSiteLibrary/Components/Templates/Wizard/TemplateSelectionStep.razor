@using ConstructionSiteLibrary.Model.TemplateWizard
@using ConstructionSiteLibrary.Repositories
@using Shared.Templates

@inject TemplatesRepository TemplatesRepository

<ScreenComponent @ref="screenComponent" />
@if (initialLoading)
{
    <Loading />
}
else
{
    <RadzenTemplateForm TItem="TemplateModel" Data="@CurrentTemplate" >
        <div class="card shadow mb-3 divCard">
            <RadzenText>Seleziona un template preesistente o creane uno nuovo</RadzenText>
            <RadzenDropDown @bind-Value=@CurrentTemplate Data=@Templates TextProperty="TitleTemplate" AllowClear=true
                            Change="@((args) => OnTemplateChanged(args))" Placeholder="-" />
        </div>

        @* @if (Data.SelectedTemplate is not null)
        {
            <div class="mb-3">
                <RecapTemplateQuestions SelectedTemplate="@Data.SelectedTemplate" />
            </div>
        } *@

    </RadzenTemplateForm>
}

@code
{
    List<TemplateModel> Templates = [];

    FormData Data = new();

    /// <summary>
    /// booleano che indica se la pagina sta eseguendo il caricamento iniziale
    /// </summary>
    private bool initialLoading;

    [Parameter]
    required public TemplateModel CurrentTemplate { get; set; }

    [Parameter]
    required public EventCallback<TemplateModel?> OnTemplateSelected { get; set; }

    ScreenComponent screenComponent;

    protected override async Task OnInitializedAsync()
    {
        initialLoading = true;
        await base.OnInitializedAsync();
        await LoadData();
        initialLoading = false;
    }

    private async Task LoadData()
    {
        Templates = await TemplatesRepository.GetTemplates();
    }

    private async Task OnTemplateChanged(object template)
    {
        //CurrentTemplate = template as TemplateModel;
        await OnTemplateSelected.InvokeAsync(template as TemplateModel?);
    }

    class FormData
    {
        public TemplateModel? SelectedTemplate;
    }
}