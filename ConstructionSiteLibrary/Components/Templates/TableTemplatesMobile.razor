@using ConstructionSiteLibrary.Repositories
@using ConstructionSiteLibrary.Components.Generics
@using Shared;

@inject NavigationService NavigationService
@inject TemplatesRepository TemplatesRepository
@inject DialogService DialogService

<ScreenComponent @ref="screenComponent" />
@if (onLoading)
{
    <Loading />
}
else
{
    <div class="marginMobile">

            @* <RadzenButton Icon="add" Text="Nuovo" ButtonStyle="ButtonStyle.Primary" class="ButtonAdd"
                Style="margin-bottom:2rem;margin-top:1rem;" Click="@(()=>OpenNewForm())" />
            <RadzenButton Icon="sort" Text="Ordina" ButtonStyle="ButtonStyle.Primary" class="ButtonAdd"
                Style="margin-bottom:2rem;margin-top:1rem;" Click="@(()=>OpenOrderForm())" /> *@

        <SectionTitle PageTitle="Template" ButtonText="+ aggiungi template" SearchPlaceholder="Cerca template"
            OnButtonClicked="@OpenWizard" OnSearchChanged="@SearchChanged" />

            @foreach (var template in displayedTemplates)
            {
                <div class="card round-border cardClass mb-3">
   
                    <RadzenStack Gap="0">
                        <RadzenText TextStyle="TextStyle.Overline" class="rz-display-flex rz-mt-2 rz-my-0">Nome
                        </RadzenText>
                        <RadzenText TextStyle="TextStyle.Body1"><b>@template.NameTemplate</b></RadzenText>
                        <RadzenText TextStyle="TextStyle.Overline" class="rz-display-flex rz-mt-2 rz-my-0">Data
                        </RadzenText>
                        <RadzenText TextStyle="TextStyle.Body1"><b>@template.CreationDate</b></RadzenText>

                        @* Mostro i bottoni solo se ho i permessi di modifica *@
                        <RadzenRow Class="rz-mt-2" JustifyContent="JustifyContent.Right" Gap="1rem">
                            <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Info" Variant="Variant.Filled"
                                Size="ButtonSize.Medium" Click="@(()=>OpenModifyTemplate(template))" class="buttonEdit"
                                />
                            <RadzenButton Icon="delete" ButtonStyle="ButtonStyle.Danger" Variant="Variant.Filled"
                                Size="ButtonSize.Medium" Click="@(()=>Hide(template))" class="buttonDelete"
                                 />
                        </RadzenRow>
                    </RadzenStack>

                </div>
            }
    </div>
}
