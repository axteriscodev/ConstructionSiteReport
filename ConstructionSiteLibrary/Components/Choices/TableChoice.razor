@using ConstructionSiteLibrary.Managers
@using ConstructionSiteLibrary.Repositories
@using ConstructionSiteLibrary.Components.Generics
@using Shared;
@using Shared.Templates


@inject DialogService DialogService
@inject NotificationManager NotificationManager
@inject QuestionRepository QuestionRepository


<ScreenComponent @ref="screenComponent" />
@if (onLoading)
{
    <Loading />
}
else
{
    <div class="mx-2 my-5">
        <SectionTitle PageTitle="Opzioni risposta" ButtonText="+ aggiungi opzione risposta" SearchPlaceholder="Cerca opzione risposta"
                      OnButtonClicked="@OpenNewForm" OnSearchChanged="@SearchChanged" />


        <table class="table table-striped my-table">
            <thead>
            <th scope="col">Tag</th>
            <th scope="col">Valore</th>
            <th scope="col"></th>
            </thead>
            <tbody>
                @if (displayedChoices.Count > 0)
                {
                    @for (int i = 0; i < displayedChoices.Count; i += 1)
                    {
                        <tr>
                            <td>@displayedChoices[i].Tag</td>
                            <td>@displayedChoices[i].Value</td>
                            <td>
                                <ButtonDropdown Object="@displayedChoices[i]"
                                                OnUpdateClicked="@OpenUpdateForm" OnDeleteClicked="@Hide" />
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">Nessuna opzione di risposta trovata</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="mt-5">
            <AxtPager PagingSummaryFormat="@pagingSummaryFormat" Count="@count" PageSize="@pageSize" OnPageChanged="@PageChanged" />
        </div>

    </div>
}