@using ClientWebApp.Managers
@inject HttpManager HttpManager

<div class="">
    <RadzenTemplateForm TItem="FormQuestionData" Data=@form Submit=@Save>
        <RadzenStack class="px-2">
            <RadzenFormField Text="Titolo <span style='color:red'> (obbligatorio)</span>" Variant="@variant">
                <ChildContent>
                    <RadzenTextBox Name="Titolo" @bind-Value="@form.Text" />
                </ChildContent>
                <Helper>
                    <RadzenRequiredValidator Component="Titolo" Popup=false Text="Il campo Titolo è obbligatorio" />
                </Helper>
            </RadzenFormField>

            @* <RadzenFormField Text="Scelta <span style='color:red'> (obbligatorio)</span>" Variant="@variant">
