                    <RadzenTextBox Name="Scelta" @bind-Value="@form.Choices[0].Value" />
                </ChildContent>
                <Helper>
                    <RadzenRequiredValidator Component="Scelta" Popup=false Text="Il campo Scelta è obbligatorio" />
                </Helper>
            </RadzenFormField> *@

            <RadzenFormField Text="Note" Variant="@variant">
                <ChildContent>
                    <RadzenTextBox Name="Note" @bind-Value="@form.Note" />
                </ChildContent>
@*                 <Helper>
                    <RadzenRequiredValidator Component="Note" Popup=false Text="Il campo Note è obbligatorio" />
                </Helper> *@
            </RadzenFormField>

            <RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="Salva" class="buttonSalva" IsBusy=@onSaving
                BusyText="Salvataggio in corso" />
        </RadzenStack>
    </RadzenTemplateForm>
</div>
